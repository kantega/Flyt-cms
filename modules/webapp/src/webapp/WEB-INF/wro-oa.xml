<?xml version="1.0" encoding="UTF-8"?>
<groups xmlns="http://www.isdc.ro/wro"
        xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
        xsi:schemaLocation="http://www.isdc.ro/wro wro.xsd">

<!--
    Configuration file for Web Resource Optimizer (wro).

    The groups admin-* (roughly) corresponds to the scripts that
    were included by the individual .jsp-files (admin-loginlayout for
    loginLayout.jsp, admin-common for commonLayout.jsp, ...).

    The other groups are just single files or logical groupings of related
    scripts to enhance readability and maintainability.
-->

    <group name="admin-loginlayout">
        <css>/login/css/reset.css</css>
        <css>/login/css/base.css</css>
        <css>/login/css/default.css</css>
        <group-ref>jquery-core</group-ref>
        <js>/login/js/formlabels.js</js>
    </group>

    <group name="admin-commonlayout">
        <group-ref>admin-core</group-ref>
        <group-ref>jquery-all</group-ref>
        <js>/admin/js/common.js</js>
        <js>/admin/js/admin.js</js>
    </group>

    <group name="admin-popuplayout">
        <group-ref>admin-core</group-ref>
        <group-ref>jquery-all</group-ref>
        <js>/admin/js/common.js</js>
    </group>

    <group name="admin-searchlayout">
        <group-ref>admin-core</group-ref>
        <css>/admin/css/search.css</css>
        <group-ref>jquery-all</group-ref>
    </group>

    <group name="admin-administrationlayout">
        <css>/admin/css/administration.css</css>
    </group>

    <group name="admin-editcontentlayout">
        <css>/admin/css/editcontent.css</css>
        <css>/admin/css/formeditor.css</css>
        <js>/admin/js/editcontent.js</js>
        <js>/admin/js/date.js</js>
        <js>/admin/js/editcontext.js</js>
        <js>/admin/js/formeditor.js</js>
    </group>

    <group name="admin-contentnavigatelayout">
        <css>/admin/css/navigate.css</css>
        <js>/admin/js/navigate.js</js>
        <js>/admin/js/content.js</js>
    </group>

    <group name="miniaksess">
        <css>/admin/css/jquery-ui-1.8.1.custom.css</css>
        <css>/admin/css/jquery-ui-additions.css</css>
        <css>/admin/css/miniaksess.css</css>
        <js>/admin/js/common.js</js>
        <js>/admin/js/editcontext.js</js>
    </group>

    <group name="admin-mypage">
        <group-ref>editcontext</group-ref>
        <js>/aksess/js/autocomplete.js</js>
    </group>

    <!-- Single-file groups -->

    <group name="editcontext">
        <js>/admin/js/editcontext.js</js>
    </group>

    <group name="navigate">
        <js>/admin/js/navigate.js</js>
    </group>

    <group name="content">
        <js>/admin/js/content.js</js>
    </group>

    <group name="editcontent">
        <js>/admin/js/editcontent.js</js>
    </group>

    <group name="date">
        <js>/admin/js/date.js</js>
    </group>

    <group name="editmultimedia">
        <js>/admin/js/editmultimedia.js</js>
    </group>

    <group name="multimedia">
        <js>/admin/js/multimedia.js</js>
    </group>

    <group name="linkcheck">
        <js>/admin/js/linkcheck.js</js>
    </group>

    <group name="notes">
        <js>/admin/js/notes.js</js>
    </group>

    <group name="organizesubpages">
        <js>/admin/js/organizesubpages.js</js>
    </group>

    <group name="statistics">
        <js>/admin/js/statistics.js</js>
    </group>

    <group name="autocomplete">
        <js>/aksess/js/autocomplete.js</js>
    </group>

    <!-- Logical groupings of related files -->

    <group name="admin-core">
        <css>/login/css/reset.css</css>
        <css>/login/css/base.css</css>
        <css>/admin/css/default.css</css>
    </group>

    <group name="jquery-core">
        <js>/aksess/js/jquery-1.4.2.min.js</js>
    </group>

    <group name="jquery-all">
        <group-ref>jquery-core</group-ref>
        <css>/admin/css/jquery-ui-1.8.1.custom.css</css>
        <css>/admin/css/jquery-ui-additions.css</css>
        <css>/admin/css/jquery.autocomplete.css</css>
        <js>/admin/js/jquery.dimensions.pack.js</js>
        <js>/admin/js/jquery-ui-1.8.2.custom.min.js</js>
        <js>/admin/js/jquery.contextMenu.js</js>
        <js>/admin/js/jquery.ba-bbq-1.0.3.min.js</js>
        <js>/admin/js/jquery.dataTables.min.js</js>
        <js>/admin/js/jquery.autocomplete.min.js</js>
        <js>/admin/js/jquery.interface.js</js>
        <js>/admin/js/jquery.lazyload.mini.js</js>
    </group>

</groups>
