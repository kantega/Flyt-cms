<!DOCTYPE beans PUBLIC "-//SPRING//DTD BEAN//EN" "http://www.springframework.org/dtd/spring-beans.dtd">

<beans>
    <bean class="no.kantega.publishing.spring.PropertyReplacer"/>

    <bean id="urlMapping" class="org.springframework.web.servlet.handler.SimpleUrlHandlerMapping">
        <property name="mappings">
            <props>
                <prop key="/password/reset">resetPasswordController</prop>
                <prop key="/profile/">searchProfilesController</prop>
                <prop key="/profile/search">searchProfilesController</prop>
                <prop key="/profile/edit">editProfileController</prop>
                <prop key="/profile/delete">deleteProfileController</prop>
                <prop key="/role/">searchRolesController</prop>
                <prop key="/role/search">searchRolesController</prop>
                <prop key="/role/edit">editRoleController</prop>
                <prop key="/role/delete">deleteRoleController</prop>
                <prop key="/role/user">viewUserRolesController</prop>
                <prop key="/role/userswithrole">viewUsersWithRoleController</prop>
                <prop key="/role/adduserrole">addUserRoleController</prop>
                <prop key="/role/removeuserrole">removeUserRoleController</prop>
            </props>
        </property>
    </bean>

    <bean id="resetPasswordController" class="no.kantega.useradmin.controls.ResetPasswordController" parent="useradminController"></bean>

    <bean id="searchProfilesController" class="no.kantega.useradmin.controls.SearchProfilesController" parent="useradminController">
        <property name="minQueryLength" value="${security.profiles.minquerylength}"/> 
    </bean>

    <bean id="editProfileController" class="no.kantega.useradmin.controls.EditProfileController" parent="useradminController"></bean>
    <bean id="deleteProfileController" class="no.kantega.useradmin.controls.DeleteProfileController" parent="useradminController"></bean>

    <bean id="viewUserRolesController" class="no.kantega.useradmin.controls.ViewUserRolesController" parent="useradminController"></bean>
    <bean id="viewUsersWithRoleController" class="no.kantega.useradmin.controls.ViewUsersWithRoleController" parent="useradminController"></bean>

    <bean id="editRoleController" class="no.kantega.useradmin.controls.EditRoleController" parent="useradminController"></bean>
    <bean id="deleteRoleController" class="no.kantega.useradmin.controls.DeleteRoleController" parent="useradminController"></bean>
    <bean id="addUserRoleController" class="no.kantega.useradmin.controls.AddUserRoleController" parent="useradminController"></bean>
    <bean id="removeUserRoleController" class="no.kantega.useradmin.controls.RemoveUserRoleController" parent="useradminController"></bean>

    <bean id="searchRolesController" class="no.kantega.useradmin.controls.SearchRolesController" parent="useradminController"></bean>

    <bean id="viewResolver" class="org.springframework.web.servlet.view.InternalResourceViewResolver">
        <property name="prefix"><value>/WEB-INF/jsp/useradmin/</value></property>
        <property name="suffix"><value>.jsp</value></property>
    </bean>
</beans>

