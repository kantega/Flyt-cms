<web-app>
    <display-name>Aksess</display-name>
    <description>Kantega Aksess Publisering for Java</description>

    <context-param>
        <param-name>contextConfigLocation</param-name>
        <param-value>/WEB-INF/applicationContext.xml</param-value>
    </context-param>

    <filter>
        <filter-name>AdminFilter</filter-name>
        <filter-class>no.kantega.publishing.security.filter.AdminFilter</filter-class>
    </filter>

    <filter>
        <filter-name>UrlRewriteFilter</filter-name>
        <filter-class>no.kantega.publishing.client.filter.ContentRewriteFilter</filter-class>
    </filter>

    <filter>
        <filter-name>MultipartFilter</filter-name>
        <filter-class>no.kantega.commons.filter.NoSpringContextCapableMultipartFilter</filter-class>
    </filter>

    <filter>
        <filter-name>ParamEncodingFilter</filter-name>
        <filter-class>no.kantega.commons.filter.ParamEncodingFilter</filter-class>
    </filter>

    <filter>
        <filter-name>AksessRequestFilter</filter-name>
        <filter-class>no.kantega.commons.filter.AksessRequestFilter</filter-class>
    </filter>

    <filter>
        <filter-name>SetupFilter</filter-name>
        <filter-class>no.kantega.publishing.setup.SetupFilter</filter-class>
    </filter>

    <filter-mapping>
        <filter-name>SetupFilter</filter-name>
        <url-pattern>/*</url-pattern>
    </filter-mapping>


    <filter-mapping>
        <filter-name>ParamEncodingFilter</filter-name>
        <url-pattern>/*</url-pattern>
    </filter-mapping>

    <filter-mapping>
        <filter-name>MultipartFilter</filter-name>
        <url-pattern>/*</url-pattern>
    </filter-mapping>

    <filter-mapping>
        <filter-name>AdminFilter</filter-name>
        <url-pattern>/admin/*</url-pattern>
    </filter-mapping>

    <filter-mapping>
        <filter-name>UrlRewriteFilter</filter-name>
        <url-pattern>/*</url-pattern>
    </filter-mapping>

    <filter-mapping>
        <filter-name>AksessRequestFilter</filter-name>
        <url-pattern>/*</url-pattern>
    </filter-mapping>

    <listener>
        <listener-class>no.kantega.publishing.spring.DataDirectoryContextListener</listener-class>
    </listener>

    <listener>
        <listener-class>no.kantega.publishing.spring.LogInitListener</listener-class>
    </listener>

    <listener>
        <listener-class>no.kantega.publishing.spring.OpenAksessContextLoaderListener</listener-class>
    </listener>

    <servlet>
        <servlet-name>SetupServlet</servlet-name>
        <servlet-class>no.kantega.publishing.setup.SetupServlet</servlet-class>
    </servlet>

    <servlet>
        <servlet-name>aksess</servlet-name>
        <servlet-class>org.springframework.web.servlet.DispatcherServlet</servlet-class>
    </servlet>

    <servlet>
        <servlet-name>useradmin</servlet-name>
        <servlet-class>org.springframework.web.servlet.DispatcherServlet</servlet-class>
    </servlet>

    <servlet>
        <servlet-name>dwr</servlet-name>
        <servlet-class>org.springframework.web.servlet.DispatcherServlet</servlet-class>
        <load-on-startup>3</load-on-startup>
        <init-param>
            <param-name>debug</param-name>
            <param-value>true</param-value>
        </init-param>
        <init-param>
            <param-name>crossDomainSessionSecurity</param-name>
            <param-value>false</param-value>
        </init-param>
    </servlet>
