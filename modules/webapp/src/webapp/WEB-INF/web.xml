    <servlet-mapping>
        <servlet-name>SetupServlet</servlet-name>
        <url-pattern>/Setup.initialAction</url-pattern>
    </servlet-mapping>

    <servlet-mapping>
        <servlet-name>aksess</servlet-name>
        <url-pattern>/content.ap</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>aksess</servlet-name>
        <url-pattern>*.asp</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>aksess</servlet-name>
        <url-pattern>/attachment.ap</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>aksess</servlet-name>
        <url-pattern>/attachments/*</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>aksess</servlet-name>
        <url-pattern>/multimedia.ap</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>aksess</servlet-name>
        <url-pattern>/multimedia/*</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>aksess</servlet-name>
        <url-pattern>/rss.ap</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>aksess</servlet-name>
        <url-pattern>*.action</url-pattern>
    </servlet-mapping>

    <servlet-mapping>
        <servlet-name>useradmin</servlet-name>
        <url-pattern>/admin/administration/useradmin/*</url-pattern>
    </servlet-mapping>

    <servlet-mapping>
        <servlet-name>aksess</servlet-name>
        <url-pattern>/admin/oap/*</url-pattern>
    </servlet-mapping>

    <servlet-mapping>
        <servlet-name>dwr</servlet-name>
        <url-pattern>/admin/dwr/*</url-pattern>
    </servlet-mapping>

    <servlet-mapping>
        <servlet-name>aksess</servlet-name>
        <url-pattern>/oap/*</url-pattern>
    </servlet-mapping>

    <servlet-mapping>
        <servlet-name>jsp</servlet-name>
        <url-pattern>*.jnlp</url-pattern>
    </servlet-mapping>

    <servlet-mapping>
        <servlet-name>jsp</servlet-name>
        <url-pattern>*.jjs</url-pattern>
    </servlet-mapping>

    <servlet-mapping>
        <servlet-name>aksess</servlet-name>
        <url-pattern>/sitemap.xml</url-pattern>
    </servlet-mapping>

    <servlet-mapping>
        <servlet-name>aksess</servlet-name>
        <url-pattern>/robots.txt</url-pattern>
    </servlet-mapping>
   <!--
    <servlet-mapping>
        <servlet-name>webdav</servlet-name>
        <url-pattern>/webdav/*</url-pattern>
    </servlet-mapping>
    -->
    <welcome-file-list>
        <welcome-file>content.ap</welcome-file>
        <welcome-file>index.jsp</welcome-file>
    </welcome-file-list>

    <session-config>
        <session-timeout>15</session-timeout>
    </session-config>

    <error-page>
        <error-code>404</error-code>
        <location>/content.ap</location>
    </error-page>
</web-app>