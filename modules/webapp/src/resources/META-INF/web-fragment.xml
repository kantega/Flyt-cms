<web-fragment version="3.0"
              xmlns="http://java.sun.com/xml/ns/javaee"
              xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
              xsi:schemaLocation="http://java.sun.com/xml/ns/javaee http://java.sun.com/xml/ns/javaee/web-fragment_3_0.xsd">

    <name>openaksess</name>

    <context-param>
        <param-name>contextConfigLocation</param-name>
        <param-value>/WEB-INF/applicationContext.xml</param-value>
    </context-param>

    <!-- This filter is registere here, instead of in OpenAksessServletContainerInitializer because OpenAksessServletContainerInitializer.onStartup
     is called before ContextLoaderListener.contextInitialized.
     Because of this Aksess.configuration is not initialized when onStartup is called.
      Other filters that rely on this is declared in OpenAksessServletContainerInitializer Filtername.class, but this is not
      possible in this case because OpenAksessConfiguredFilter has init-params.
     -->
    <filter>
        <filter-name>aksesswro</filter-name>
        <filter-class>no.kantega.publishing.client.filter.OpenAksessConfiguredFilter</filter-class>
        <init-param>
            <param-name>wrappedFilterClass</param-name>
            <param-value>ro.isdc.wro.http.WroFilter</param-value>
        </init-param>
    </filter>

    <filter-mapping>
        <filter-name>aksesswro</filter-name>
        <url-pattern>/wro-oa/*</url-pattern>
        <dispatcher>REQUEST</dispatcher>
        <dispatcher>INCLUDE</dispatcher>
        <dispatcher>FORWARD</dispatcher>
    </filter-mapping>

    <servlet>
        <servlet-name>aksess</servlet-name>
        <servlet-class>org.springframework.web.servlet.DispatcherServlet</servlet-class>
    </servlet>

    <servlet>
        <servlet-name>useradmin</servlet-name>
        <servlet-class>org.springframework.web.servlet.DispatcherServlet</servlet-class>
    </servlet>

    <servlet>
        <servlet-name>TinyMCEServlet</servlet-name>
        <servlet-class>no.kantega.publishing.TinyMCEServlet</servlet-class>
    </servlet>

    <servlet>
        <servlet-name>StatusServlet</servlet-name>
        <servlet-class>no.kantega.publishing.web.servlet.StatusServlet</servlet-class>
    </servlet>

    <servlet-mapping>
        <servlet-name>aksess</servlet-name>
        <url-pattern>/</url-pattern>
    </servlet-mapping>

    <servlet-mapping>
        <servlet-name>useradmin</servlet-name>
        <url-pattern>/admin/administration/useradmin/*</url-pattern>
    </servlet-mapping>

    <servlet-mapping>
        <servlet-name>aksess</servlet-name>
        <url-pattern>/admin/oap/*</url-pattern>
    </servlet-mapping>

    <servlet-mapping>
        <servlet-name>aksess</servlet-name>
        <url-pattern>/oap/*</url-pattern>
    </servlet-mapping>

    <servlet-mapping>
        <servlet-name>jsp</servlet-name>
        <url-pattern>*.jjs</url-pattern>
    </servlet-mapping>

    <servlet-mapping>
        <servlet-name>jsp</servlet-name>
        <url-pattern>*.jsp</url-pattern>
    </servlet-mapping>

    <servlet-mapping>
        <servlet-name>TinyMCEServlet</servlet-name>
        <url-pattern>/aksess/tiny_mce/tiny_mce_gzip.jsp</url-pattern>
    </servlet-mapping>

    <servlet-mapping>
        <servlet-name>StatusServlet</servlet-name>
        <url-pattern>/status</url-pattern>
    </servlet-mapping>

    <welcome-file-list>
        <welcome-file>index.jsp</welcome-file>
    </welcome-file-list>

    <session-config>
        <session-timeout>15</session-timeout>
        <cookie-config>
            <http-only>true</http-only>
        </cookie-config>
    </session-config>

    <error-page>
        <exception-type>no.kantega.commons.exception.NotAuthorizedException</exception-type>
        <location>/403.jsp</location>
    </error-page>

</web-fragment>
